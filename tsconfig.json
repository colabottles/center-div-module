{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "vitest"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt"
  ]
}
